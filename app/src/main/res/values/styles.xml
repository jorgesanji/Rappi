<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ThemeToolbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <!-- Theme ToolBar -->

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- Tool bar background -->
        <item name="android:background">@android:color/transparent</item>
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Subtitle color -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Title color-->
        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>

    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <!-- title encapsulating main part (backgroud) of custom alertdialog -->
        <!--<item name="android:windowFrame">@null</item>-->
        <!-- turn off any drawable used to draw a frame on the window -->
        <!--<item name="android:windowBackground">@null</item>-->
        <!-- turn off any drawable used to draw a frame on the window -->
        <item name="android:windowIsFloating">true</item>
        <!-- float the window so it does not fill the screen -->
        <item name="android:windowNoTitle">true</item>
        <!-- remove the title bar we make our own-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!-- remove the shadow from under the title bar -->
    </style>

    <!-- OTHER STYLES -->

    <style name="ButtonsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/home_button_width_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="android:background">@drawable/button_states</item>
        <item name="android:minWidth">@dimen/home_button_width_min</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_mediun</item>
        <item name="android:padding">@dimen/padding_mediun</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="menuItemTitleSize">@dimen/text_size_tiny</item>
        <item name="menuItemTitleFont">SemiBold</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="@android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/black_opaque_50</item>
        <item name="android:textColorSecondary">@color/black_opaque_50</item>
        <item name="android:divider">@color/gray_color</item>
    </style>


</resources>
