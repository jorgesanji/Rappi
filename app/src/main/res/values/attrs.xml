<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RPTextView">
        <attr name="fontName" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>
        <attr name="underLineColor" format="color" />
        <attr name="underLineText" format="string" />
        <attr name="hasMessageStyle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RPRecyclerView">
        <attr name="factorVelocity" format="float" />
    </declare-styleable>

    <declare-styleable name="RPImageView">
        <attr name="imageError" format="reference" />
        <attr name="imageEmptyUri" format="reference" />
        <attr name="imageRounded" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RPMenuButton">
        <attr name="menuButtonStateExpandedImageResource" format="reference" />
        <attr name="menuButtonImageResource" format="reference" />
        <attr name="menuButtonBackgroundTintColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RPMenuItem">
        <attr name="menuItemTitleFont" format="integer">
            <flag name="Regular" value="0" />
            <flag name="Bold" value="1" />
            <flag name="Light" value="2" />
            <flag name="SemiBold" value="3" />
        </attr>
        <attr name="menuItemTitle" format="string" />
        <attr name="menuItemTitleSize" format="dimension" />
        <attr name="menuItemTitleColor" format="color" />
        <attr name="menuItemImageResource" format="reference" />
        <attr name="menuItemBackgroundTintColor" format="color" />
    </declare-styleable>


</resources>