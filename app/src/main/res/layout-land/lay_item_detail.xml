<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_min"
    android:background="@drawable/background_item"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_mediun">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.grability.rappi.view.customviews.RPImageView
                    android:id="@+id/appImage"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/image_big_size"
                    android:layout_margin="@dimen/margin_min"
                    android:layout_weight="0.5"
                    android:src="@android:drawable/ic_menu_gallery"
                    app:imageRounded="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.grability.rappi.view.customviews.RPTextView
                        android:id="@+id/appName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_mediun"
                        android:layout_marginRight="@dimen/margin_min"
                        android:layout_marginTop="@dimen/margin_mediun"
                        android:textSize="@dimen/text_size_super_big"
                        app:fontName="Bold" />

                    <com.grability.rappi.view.customviews.RPTextView
                        android:id="@+id/appCategoryName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_mediun"
                        android:layout_marginRight="@dimen/margin_min"
                        android:textSize="@dimen/text_size_big"
                        app:fontName="Light" />

                </LinearLayout>

            </LinearLayout>

            <com.grability.rappi.view.customviews.RPTextView
                android:id="@+id/appDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_mediun"
                android:layout_marginRight="@dimen/margin_min"
                android:layout_marginTop="@dimen/margin_mediun"
                android:textSize="@dimen/text_size_big"
                app:fontName="Regular" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

